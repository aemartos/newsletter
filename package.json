{
  "name": "newsletter-app",
  "version": "1.0.4",
  "description": "Full-stack newsletter app with React Router SSR",
  "private": true,
  "scripts": {
    "dev": "pm2 start ecosystem.config.js",
    "dev:client": "cd client && pnpm dev",
    "dev:server": "cd server && pnpm dev",
    "build": "cd client && pnpm build && cd ../server && pnpm db:generate && pnpm build",
    "start": "cd server && node dist/index.js",
    "migrate": "cd server && pnpm db:deploy",
    "db:deploy": "cd server && pnpm db:deploy",
    "db:seed": "cd server && pnpm db:seed",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "pm2": "^5.3.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@8.15.0"
}